{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container-fluid p-0">

        <div class="row no-gutters justify-content-center mb-5 py-3 bg-secondary text-white font-weight-bold">
            {% form_theme form 'form/_searchField.html.twig' %}
            {{ form_start(form, {'attr': {'class': 'col-11 col-lg-8'}}) }}
                <div class="form-inline row justify-content-center align-items-center">
                    {{ form_row(form.searchField) }}
                    <div class="col-11 col-lg-2">
                        <button type="submit" class="btn btn-primary w-100">Lancer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>

        <div class="row no-gutters justify-content-center">
            <div class="col-11 col-lg-8">
                <h1 class="text-primary">
                    {% if search %}
                        Résultat de la recherche :
                    {% else %}
                        Toutes les séries :
                    {% endif %}
                </h1>
            </div>
        </div>

        <div class="row no-gutters justify-content-center">
            {% for program in programs %}
                <div class="col-11 col-lg-8">
                    <h2><a class="text-secondary" href="{{ path('wild_show', {'slug': program.slug}) }}">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</a></h2>
                    <p>{{ program.summary }}</p>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>

    </div>
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">Séries</li>
{% endblock %}