{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row no-gutters justify-content-center">
            <div class="col-11 col-lg-8">
                <h1 class="text-primary">Toutes les séries de la table program :</h1>
            </div>
        </div>

        <div class="row no-gutters justify-content-center">
            {% for program in programs %}
                <div class="col-11 col-lg-8">
                    <h2><a class="text-secondary" href="{{ path('wild_show', {'slug': program.title|lower|replace({' ': '-'})}) }}">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</a></h2>
                    <p>{{ program.summary }}</p>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>

        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-11 col-lg-10">
                <a href="{{ path('app_index') }}">
                    Retour à l'accueil
                </a>
            </div>
        </div>

    </div>
{% endblock %}