{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row no-gutters justify-content-center">
            <div class="col-11 col-lg-8">
                <h1 class="text-primary text-center">Épisode {{ episode.number }} - {{ episode.title }}</h1>
                <h2 class="text-primary text-center">Saison {{ season.number }} de {{ program.title }}</h2>
            </div>
        </div>

        <div class="row no-gutters justify-content-center">
            <h2 class="col-11 col-lg-8 text-secondary">Synopsis</h2>
            <p class="col-11 col-lg-8">{{ episode.synopsis }}</p>
        </div>

        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-11 col-lg-4">
                <a href="{{ path('wild_show_season', {'id': season.id}) }}">
                    Retour à la page de la saison
                </a>
            </div>
            <div class="col-11 col-lg-4 text-lg-right mt-2 mt-lg-0">
                <a href="{{ path('wild_show', {'slug': program.title|lower|replace({' ': '-'})}) }}">
                    Retour à la page de la série
                </a>
            </div>
        </div>

    </div>
{% endblock %}